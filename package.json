{
  "name": "ya-disk-stream",
  "version": "1.0.0",
  "description":
    "Readable and writable streams for uploading/downloading files from Yandex.Disk",
  "main": "index.js",
  "repository": "git@github.com:RomiC/ya-disk-stream.git",
  "author": "Roman Charugin <i@charugin.ru>",
  "license": "MIT",
  "dependencies": {
    "ya-disk": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "codecov": "^2.2.0",
    "eslint": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "nyc": "^11.0.2",
    "proxyquire": "^2.0.1",
    "sinon": "^5.0.3"
  },
  "scripts": {
    "example": "babel-node",
    "test": "ava tests/*.spec.js",
    "test:ci": "nyc npm test",
    "test:watch": "npm test -- --watch",
    "test:debug": "node --inspect node_modules/ava/profile.js",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "coverage":
      "nyc report --reporter=lcov > coverage.lcov && codecov --token=2b70b92f-f39e-4a17-90fa-47b8449573f7",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "ava": {
    "files": ["tests/*.spec.js"],
    "failWithoutAssertions": true
  },
  "lint-staged": {
    "*.js": ["npm run lint:fix", "git add"]
  }
}
